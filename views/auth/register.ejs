<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img
          src="/images/login-background.svg"
          class="img-fluid"
          alt="Phone image"
        />
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="" method="post">
          <!-- Name input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example133">User name</label>
            <input type="text" id="form1Example133" class="form-control
            form-control-lg" name="name" value="<%= oldData?oldData.name:"" %>"
            /> <% if (errors) { %>
            <p class="text-danger mt-2"><%= errors.name %></p>
            <% } %>
          </div>

          <!-- Email input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example13">Email address</label>
            <input type="email" id="form1Example13" class="form-control
            form-control-lg" name="email" value="<%= oldData?oldData.email:""
            %>" /> <% if (errors) { %>
            <p class="text-danger mt-2"><%= errors.email %></p>
            <% } %>
          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example23">Password</label>
            <input type="password" id="form1Example23" class="form-control
            form-control-lg" name="password" value="<%=
            oldData?oldData.password:"" %>" /> <% if (errors) { %>
            <p class="text-danger mt-2"><%= errors.password %></p>
            <% } %>
          </div>
          <!--Retype Password -->
          <div class="form-outline mb-4">
            <label class="form-label" for="form1Example234"
              >Retype Password</label
            >
            <input type="password" id="form1Example234" class="form-control
            form-control-lg" name="password2" value="<%=
            oldData?oldData.password2:"" %>" />
            <p class="text-danger mt-2"><%= retypeError %></p>
          </div>

          <% if (success) { %>
          <p class="alert alert-success" %>"><%= success %></p>
          <% } %>

          <!-- Submit button -->
          <button type="submit" class="btn btn-primary btn-lg btn-block">
            Sign Up
          </button>
          <a href="./login" class="mx-3">Sign In</a>
        </form>
      </div>
    </div>
  </div>
</section>
